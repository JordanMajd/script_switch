{
	"manifest_version": 2,
	"name": "Script Switch",
	"version": "1.0",
	"description": "A Firefox extension providing a toggle switch / shortcut to enable or disable javascript.",
	"permissions": [
		"webRequest",
		"webRequestBlocking",
		"<all_urls>"
	],
	"background": {
		"scripts": ["background.js"]
	},
	"content_scripts": [{
		"matches": ["<all_urls>"],
		"js": ["content.js"],
		"all_frames": true
	}],
	"icons": {
		"48": "icons/on.svg",
		"96": "icons/on.svg"
	},
	"browser_action": {
		"default_icon": "icons/on.svg",
		"default_title": "Script Switch: JS enabled"
	},
	"commands": {
		"toggle": {
			"suggested_key": {
				"default": "Alt+J"
			},
			"description": "Toggle enable or disable  JS"

		}
	}
}
